---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const allDocuments = await getCollection('documents', ({ data }) => data.status === 'Publish');
const sortedDocuments = allDocuments.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('id-ID', { 
    day: 'numeric', 
    month: 'long', 
    year: 'numeric' 
  }).format(date);
};

const categoryColors: Record<string, string> = {
  'Peraturan': 'bg-blue-100 text-blue-700',
  'Surat': 'bg-green-100 text-green-700',
  'Materi': 'bg-purple-100 text-purple-700',
  'Lainnya': 'bg-gray-100 text-gray-700',
};
---

<BaseLayout title="Dokumen - Aktivitas Kegiatan">
  <div class="bg-gradient-to-b from-gray-50 to-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Dokumen</h1>
      <p class="text-xl text-gray-600 mb-12">Unduh dokumen dan file penting</p>

      {sortedDocuments.length > 0 ? (
        <div class="space-y-4">
          {sortedDocuments.map(doc => (
            <div class="bg-white p-6 rounded-2xl shadow-sm hover:shadow-lg transition-all">
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <span class={`px-3 py-1 rounded-lg text-xs font-medium ${categoryColors[doc.data.category] || categoryColors['Lainnya']}`}>
                      {doc.data.category}
                    </span>
                    <time class="text-sm text-gray-500">{formatDate(doc.data.date)}</time>
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 mb-2">
                    {doc.data.title}
                  </h3>
                  {doc.data.description && (
                    <p class="text-gray-600 text-sm">
                      {doc.data.description}
                    </p>
                  )}
                </div>
                <a 
                  href={doc.data.file}
                  download
                  class="flex items-center gap-2 px-6 py-3 bg-primary-500 text-white rounded-xl font-semibold hover:bg-primary-600 transition-colors whitespace-nowrap"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  Unduh
                </a>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">Belum ada dokumen</p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
