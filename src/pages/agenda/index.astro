---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const allEvents = await getCollection('events', ({ data }) => data.status === 'Publish');
const sortedEvents = allEvents.sort((a, b) => b.data.startDate.getTime() - a.data.startDate.getTime());

const upcomingEvents = sortedEvents.filter(e => e.data.eventStatus === 'Akan Datang');
const pastEvents = sortedEvents.filter(e => e.data.eventStatus === 'Selesai');

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('id-ID', { 
    day: 'numeric', 
    month: 'long', 
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  }).format(date);
};
---

<BaseLayout title="Agenda - Aktivitas Kegiatan">
  <div class="bg-gradient-to-b from-gray-50 to-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Agenda</h1>
      <p class="text-xl text-gray-600 mb-12">Jadwal kegiatan dan acara mendatang</p>

      {upcomingEvents.length > 0 && (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Akan Datang</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {upcomingEvents.map(event => (
              <a 
                href={`/agenda/${event.slug}`}
                class="bg-white p-6 rounded-2xl shadow-sm hover:shadow-xl transition-all hover:-translate-y-1"
              >
                <div class="flex items-start gap-4">
                  <div class="bg-primary-50 text-primary-600 rounded-xl p-4 text-center min-w-[70px]">
                    <div class="text-3xl font-bold">{event.data.startDate.getDate()}</div>
                    <div class="text-xs uppercase">{event.data.startDate.toLocaleDateString('id-ID', { month: 'short' })}</div>
                  </div>
                  <div class="flex-1">
                    <span class="inline-block px-3 py-1 bg-green-100 text-green-700 rounded-lg text-xs font-medium mb-2">
                      {event.data.eventStatus}
                    </span>
                    <h3 class="font-bold text-gray-900 text-lg mb-2">{event.data.title}</h3>
                    <div class="flex items-center gap-2 text-sm text-gray-600 mb-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span>{formatDate(event.data.startDate)}</span>
                    </div>
                    <div class="flex items-center gap-2 text-sm text-gray-600 mb-3">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      </svg>
                      <span>{event.data.location}</span>
                    </div>
                    <p class="text-sm text-gray-600 line-clamp-2">{event.data.excerpt}</p>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      {pastEvents.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Selesai</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {pastEvents.map(event => (
              <a 
                href={`/agenda/${event.slug}`}
                class="bg-white p-6 rounded-2xl shadow-sm hover:shadow-lg transition-all opacity-75 hover:opacity-100"
              >
                <div class="flex items-start gap-4">
                  <div class="bg-gray-100 text-gray-600 rounded-xl p-4 text-center min-w-[70px]">
                    <div class="text-3xl font-bold">{event.data.startDate.getDate()}</div>
                    <div class="text-xs uppercase">{event.data.startDate.toLocaleDateString('id-ID', { month: 'short' })}</div>
                  </div>
                  <div class="flex-1">
                    <span class="inline-block px-3 py-1 bg-gray-100 text-gray-600 rounded-lg text-xs font-medium mb-2">
                      {event.data.eventStatus}
                    </span>
                    <h3 class="font-bold text-gray-900 text-lg mb-2">{event.data.title}</h3>
                    <div class="flex items-center gap-2 text-sm text-gray-600 mb-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      </svg>
                      <span>{event.data.location}</span>
                    </div>
                    <p class="text-sm text-gray-600 line-clamp-2">{event.data.excerpt}</p>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      {allEvents.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">Belum ada agenda</p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
