---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const events = await getCollection('events', ({ data }) => data.status === 'Publish');
  return events.map(event => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

const { event } = Astro.props;
const { Content } = await event.render();

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('id-ID', { 
    day: 'numeric', 
    month: 'long', 
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  }).format(date);
};
---

<BaseLayout 
  title={`${event.data.title} - Agenda`}
  description={event.data.excerpt}
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-6">
      <a href="/agenda" class="text-primary-600 hover:text-primary-700 font-medium">
        ‚Üê Kembali ke Agenda
      </a>
    </div>

    <div class="mb-6">
      <span class={`inline-block px-4 py-2 rounded-xl text-sm font-medium ${
        event.data.eventStatus === 'Akan Datang' 
          ? 'bg-green-100 text-green-700' 
          : 'bg-gray-100 text-gray-600'
      }`}>
        {event.data.eventStatus}
      </span>
    </div>

    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-8 leading-tight">
      {event.data.title}
    </h1>

    <div class="bg-gray-50 rounded-2xl p-6 mb-8 space-y-4">
      <div class="flex items-start gap-3">
        <svg class="w-6 h-6 text-primary-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <div>
          <div class="font-semibold text-gray-900">Waktu</div>
          <div class="text-gray-600">{formatDate(event.data.startDate)}</div>
          {event.data.endDate && (
            <div class="text-gray-600">s/d {formatDate(event.data.endDate)}</div>
          )}
        </div>
      </div>

      <div class="flex items-start gap-3">
        <svg class="w-6 h-6 text-primary-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <div>
          <div class="font-semibold text-gray-900">Lokasi</div>
          <div class="text-gray-600">{event.data.location}</div>
        </div>
      </div>
    </div>

    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .prose {
    @apply text-gray-700 leading-relaxed;
  }
  .prose h2 {
    @apply text-2xl font-bold text-gray-900 mt-8 mb-4;
  }
  .prose h3 {
    @apply text-xl font-bold text-gray-900 mt-6 mb-3;
  }
  .prose p {
    @apply mb-4;
  }
  .prose ul, .prose ol {
    @apply mb-4 ml-6;
  }
  .prose li {
    @apply mb-2;
  }
</style>
