---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import AlbumCard from '../../components/AlbumCard.astro';

const allGalleries = await getCollection('galleries', ({ data }) => data.status === 'Publish');
const sortedGalleries = allGalleries.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout title="Galeri Foto - Aktivitas Kegiatan">
  <div class="bg-gradient-to-b from-gray-50 to-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Galeri Foto</h1>
      <p class="text-xl text-gray-600 mb-12">Dokumentasi foto kegiatan dalam album</p>

      {sortedGalleries.length > 0 ? (
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {sortedGalleries.map(gallery => (
            <AlbumCard
              title={gallery.data.title}
              date={gallery.data.date}
              coverImage={gallery.data.coverImage}
              slug={gallery.slug}
              imageCount={gallery.data.images.length}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">Belum ada album foto</p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
