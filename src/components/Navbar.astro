---
import { readFileSync } from 'fs';
import { join } from 'path';

let navigation = { headerMenu: [] };
try {
  const navPath = join(process.cwd(), 'src/content/settings/navigation.json');
  navigation = JSON.parse(readFileSync(navPath, 'utf-8'));
} catch (e) {}

const menuItems = navigation.headerMenu
  ?.filter((item: any) => item.enabled)
  .sort((a: any, b: any) => a.order - b.order) || [];

const currentPath = Astro.url.pathname;
---

<nav class="sticky top-0 z-50 bg-white/80 backdrop-blur-lg border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="flex items-center space-x-3 group">
        <div class="w-10 h-10 bg-primary-500 rounded-xl flex items-center justify-center group-hover:scale-105 transition-transform">
          <span class="text-white font-bold text-xl">AK</span>
        </div>
        <span class="font-bold text-lg text-gray-900">Aktivitas Kegiatan</span>
      </a>
      
      <div class="hidden md:flex items-center space-x-1">
        {menuItems.map((item: any) => (
          <a
            href={item.url}
            class={`px-4 py-2 rounded-xl text-sm font-medium transition-all ${
              currentPath === item.url || currentPath.startsWith(item.url + '/')
                ? 'bg-primary-50 text-primary-600'
                : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'
            }`}
          >
            {item.label}
          </a>
        ))}
        <a
          href="/admin"
          class="ml-4 px-4 py-2 bg-primary-500 text-white rounded-xl text-sm font-medium hover:bg-primary-600 transition-colors"
        >
          Admin
        </a>
      </div>

      <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-gray-100">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100 bg-white">
    <div class="px-4 py-3 space-y-1">
      {menuItems.map((item: any) => (
        <a
          href={item.url}
          class={`block px-4 py-2 rounded-xl text-sm font-medium ${
            currentPath === item.url || currentPath.startsWith(item.url + '/')
              ? 'bg-primary-50 text-primary-600'
              : 'text-gray-600 hover:bg-gray-50'
          }`}
        >
          {item.label}
        </a>
      ))}
      <a href="/admin" class="block px-4 py-2 bg-primary-500 text-white rounded-xl text-sm font-medium text-center">
        Admin
      </a>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
